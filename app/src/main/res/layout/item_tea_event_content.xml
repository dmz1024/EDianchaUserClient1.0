<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingBottom="@dimen/size5">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_marginLeft="@dimen/size5"
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size30"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/size5" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size250"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_logo"
        android:layout_marginTop="@dimen/size5"
        android:scaleType="fitXY" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size12"
        android:background="#fbfbfb" />


    <TextView
        android:id="@+id/tv_title"
        style="@style/TextSize12Color333"
        android:layout_marginLeft="@dimen/size5"
        android:layout_toRightOf="@id/iv_logo"
        android:layout_marginRight="@dimen/size5"
        android:layout_below="@id/view"
        android:layout_marginTop="@dimen/size11"
        android:ellipsize="end"
        android:gravity="fill_vertical"
        android:maxLines="1" />


    <TextView
        android:id="@+id/tv_content"
        style="@style/TextSize11Color666"
        android:layout_below="@id/iv_img"
        android:layout_marginLeft="@dimen/size6"

        android:layout_marginTop="@dimen/size5"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/TextSize11Color666"
        android:layout_below="@id/tv_content"
        android:layout_marginLeft="@dimen/size6"
        android:layout_marginTop="@dimen/size5" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextSize12Color333"
        android:layout_alignBottom="@id/tv_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size10"
        android:text="免费"
        android:textColor="#cd6638" />

    <TextView
        android:id="@+id/tv_state"
        style="@style/TextSize13Color333"
        android:layout_alignTop="@id/iv_img"
        android:background="#999"
        android:paddingBottom="@dimen/size6"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10"
        android:paddingTop="@dimen/size6"
        android:text="结束"
        android:textColor="#fff" />

</RelativeLayout>