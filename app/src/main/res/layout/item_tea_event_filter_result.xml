<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/size10"
    android:background="#999"
    android:padding="@dimen/size5">


    <TextView
        android:id="@+id/tv_name"
        style="@style/TextSize13Color666"
        android:textColor="#fff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/size1"
        android:paddingBottom="@dimen/size1"
        android:paddingLeft="@dimen/size2"
        android:paddingRight="@dimen/size2"
        android:text="友谊茶会" />

    <View
        android:id="@+id/view_delete"
        android:layout_width="@dimen/size10"
        android:visibility="gone"
        android:layout_height="@dimen/size10"
        android:layout_toRightOf="@id/tv_name"
        android:background="@mipmap/icon_sort_close" />

</RelativeLayout>