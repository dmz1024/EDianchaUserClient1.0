<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/size10"
    android:background="#fff">

    <EditText
        android:layout_marginTop="@dimen/size10"
        android:id="@+id/et_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="11"
        android:padding="@dimen/size8"
        android:textColor="#999"
        android:textColorHint="#999"
        android:textSize="@dimen/sp14" />

    <View
        android:id="@+id/view_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@id/et_tel"
        android:layout_marginTop="@dimen/size5"
        android:background="#ebebeb" />


    <Button
        android:id="@+id/bt_code"
        android:layout_width="@dimen/size90"
        android:layout_height="@dimen/size30"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_tel"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size8"
        android:alpha="0.2"
        android:background="@drawable/touch_bg_51b338"
        android:enabled="false"
        android:text="获取验证码"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp13" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_tel"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size5"
        android:layout_toLeftOf="@id/bt_code"
        android:background="@null"
        android:hint="验证码"
        android:maxLength="4"
        android:inputType="number"
        android:padding="@dimen/size8"
        android:textColor="#999"
        android:textColorHint="#999"
        android:textSize="@dimen/sp14" />

    <View
        android:id="@+id/view_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@id/et_code"
        android:layout_marginTop="@dimen/size5"
        android:background="#ebebeb" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/view_code"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size5"
        android:layout_toLeftOf="@id/bt_login"
        android:background="@null"
        android:hint="输入新的密码"
        android:inputType="number"
        android:maxLength="20"
        android:padding="@dimen/size8"
        android:textColor="#999"
        android:textColorHint="#999"
        android:textSize="@dimen/sp14" />

    <View
        android:id="@+id/view_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@id/et_password"
        android:layout_marginTop="@dimen/size5"
        android:background="#ebebeb" />

    <Button
        android:id="@+id/bt_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size35"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_password"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size20"
        android:alpha="0.2"
        android:background="@drawable/touch_bg_51b338"
        android:enabled="false"
        android:text="设置密码"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp13" />

</RelativeLayout>