<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingBottom="@dimen/size15">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size12"
        android:background="#fbfbfb" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size250"
        android:layout_below="@id/view"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/tv_title"
        style="@style/TextSize15Color333"
        android:layout_below="@id/iv_img"
        android:layout_marginLeft="@dimen/size5"
        android:layout_marginRight="@dimen/size70"
        android:layout_marginTop="@dimen/size10"
        android:ellipsize="end"
        android:maxLines="1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_type"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextSize15Color333"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_title"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size10"
        android:text="￥786"
        android:textColor="#cd6638"
        android:textSize="@dimen/sp17" />

    <TextView
        android:id="@+id/tv_state"
        style="@style/TextSize12Color333"
        android:layout_below="@id/view"
        android:layout_marginTop="@dimen/size20"
        android:background="#e77f2f"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/size15"
        android:paddingRight="@dimen/size15"
        android:paddingTop="@dimen/size10"
        android:text="推荐"
        android:textColor="#fff" />
</RelativeLayout>