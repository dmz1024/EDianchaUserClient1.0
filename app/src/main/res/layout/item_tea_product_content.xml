<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingBottom="@dimen/size15">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size12"
        android:background="#fbfbfb" />





    <TextView
        android:id="@+id/tv_old_price"
        style="@style/TextSize15Color666"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_img"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size12"
        android:text="￥786"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_toLeftOf="@id/tv_price"
        android:layout_alignParentLeft="true"
        style="@style/TextSize15Color333"

        android:layout_marginLeft="@dimen/size5"
        android:layout_marginRight="@dimen/size10"
        android:layout_alignBottom="@id/tv_old_price"
        android:ellipsize="end"
        android:maxLines="1" />


    <TextView
        android:id="@+id/tv_state"
        style="@style/TextSize12Color333"
        android:layout_below="@id/view"
        android:layout_marginTop="@dimen/size20"
        android:background="#e77f2f"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/size15"
        android:paddingRight="@dimen/size15"
        android:paddingTop="@dimen/size10"
        android:text="推荐"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size250"
        android:scaleType="fitXY"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextSize15Color333"
        android:text="￥786"
        android:layout_alignBottom="@id/tv_old_price"
        android:textColor="#cd6638"
        android:textSize="@dimen/sp17"
        android:layout_alignBaseline="@+id/tv_old_price"
        android:layout_toLeftOf="@+id/tv_old_price"
        android:layout_toStartOf="@+id/tv_old_price" />
</RelativeLayout>