<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb">

    <Button
        android:id="@+id/bt_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_alignParentBottom="true"
        android:background="@drawable/touch_bg_51b338"
        android:text="去支付"

        android:textColor="#fff"
        android:textSize="@dimen/sp15" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bt_pay"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="@dimen/size10">

                <TextView
                    android:id="@+id/tv_link_name"
                    style="@style/TextSize15Color333"
                    android:text="收货人：邓如果  18326167257" />

                <TextView
                    android:id="@+id/tv_link_address"
                    style="@style/TextSize13Color666"
                    android:layout_below="@id/tv_link_name"
                    android:layout_marginTop="@dimen/size10"
                    android:ellipsize="end"
                    android:maxEms="20"
                    android:maxLines="1"
                    android:text="北京市朝阳区" />

                <ImageView
                    android:layout_width="@dimen/size10"
                    android:layout_height="@dimen/size14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size15"
                android:background="#fff"
                android:padding="@dimen/size10">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_peisong"
                    style="@style/TextSize14Color333"
                    android:layout_below="@id/rv_buy"
                    android:layout_marginTop="@dimen/size15"
                    android:text="配送方式" />

                <client.ediancha.com.myview.TextImage
                    android:id="@+id/tv_tv_peisong_type"
                    style="@style/TextSize14Color666"
                    android:layout_below="@id/rv_buy"
                    android:layout_marginLeft="@dimen/size25"
                    android:layout_marginTop="@dimen/size15"
                    android:layout_toRightOf="@id/tv_peisong"
                    android:text="快递配送：" />

                <View
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size1"
                    android:layout_below="@id/tv_peisong"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_marginTop="@dimen/size15"
                    android:background="#fbfbfb" />

                <TextView
                    android:id="@+id/tv_liuyan"
                    style="@style/TextSize14Color333"
                    android:layout_below="@id/view_2"
                    android:layout_marginTop="@dimen/size15"
                    android:text="买家留言：" />

                <EditText
                    android:id="@+id/et_liuyan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size30"
                    android:layout_below="@id/view_2"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginTop="@dimen/size10"
                    android:layout_toRightOf="@id/tv_liuyan"
                    android:background="@null"
                    android:hint="对本次交易的说明"
                    android:textColor="#666"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/size15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="@dimen/size10">

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/TextSize15Color333"
                    android:layout_centerHorizontal="true"
                    android:text="￥200.00+￥15.00(运费)" />

                <TextView
                    android:id="@+id/tv_total_price"
                    style="@style/TextSize15Color333"
                    android:layout_below="@id/tv_price"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size10"
                    android:text="共计：￥215.00"
                    android:textColor="#cd673a" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>