<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size5">

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextSize14Color333" />

    <TextView
        android:id="@+id/tv_count"
        style="@style/TextSize12Color666"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/size10" />


    <TextView
        android:id="@+id/tv_price"
        style="@style/TextSize12Color666"
        android:layout_alignBottom="@id/tv_count"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginTop="@dimen/size10"
        android:layout_toRightOf="@id/tv_count"
        android:textColor="#cd6638" />

    <Button
        android:id="@+id/bt_pay"
        android:layout_width="@dimen/size45"
        android:layout_height="@dimen/size23"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/touch_bg_51b338"
        android:text="去结算"
        android:textColor="#fff"
        android:textSize="@dimen/sp12" />
</RelativeLayout>