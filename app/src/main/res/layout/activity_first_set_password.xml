<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <TextView
        style="@style/TextSize13Color666"
        android:layout_marginLeft="@dimen/size5"
        android:layout_marginTop="@dimen/size10"
        android:lineSpacingExtra="@dimen/size5"
        android:text="检测到您还未设置密码，建议您在此设置，方便后续账号+密码方式登录!\n您也可以去个人中心-设置-账号管理-密码设置进行密码和资料操作" />

    <TextView
        android:id="@+id/tv_next"
        style="@style/TextSize14Color666"
        android:layout_marginLeft="@dimen/size5"
        android:layout_marginTop="@dimen/size10"
        android:text="下次再说"
        android:textColor="#f00" />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size5"
        android:layout_toLeftOf="@id/bt_login"
        android:background="@null"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:padding="@dimen/size8"
        android:textColor="#999"
        android:textColorHint="#999"
        android:textSize="@dimen/sp14" />

    <View
        android:id="@+id/view_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_marginTop="@dimen/size5"
        android:background="#ebebeb" />

    <Button
        android:id="@+id/bt_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size35"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size20"
        android:alpha="0.2"
        android:background="@drawable/touch_bg_51b338"
        android:enabled="false"
        android:text="设置密码"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp13" />



</LinearLayout>